{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache": true,
    "**/.ruff_cache/**": true
  },
  "python.analysis.stubPath": "backend/typings",

  "python.analysis.typeCheckingMode": "strict"
}
